extends layout

block content
  nav(aria-label="breadcrumb")
    ol.breadcrumb
      li.breadcrumb-item: a(href="../") HOME
      li.breadcrumb-item: a(href="./1") 曲・メンバー入力
      li.breadcrumb-item.active パート数入力
      li.breadcrumb-item: a(href="#") 結果

  form(method="post", action="/form/2")
    button#bt-submit-1(class="btn btn-primary" type="submit") 次へ
    div
      - let i = 0;
      while i < pieceCnt
        div.piece
          h2 #{pieces[i]}
          p.ml-3.counter
          - let j =1;
          while j <= memberCnt
            div.part
              h5.ml-1 #{j} 番
              - let k = 0;
              .btn-toolbar.btn-group.part-count-button
              p.m-2 人数
                while k <= memberCnt
                  if k == '1'
                    input.mx-1(type='radio', id = 'n' + i +'_'+ j, name = 'n' + i +','+ j, value= k, checked = 'checked')
                  else
                    input.mx-1(type='radio', id = 'n' + i +'_'+ j, name = 'n' + i +','+ j, value= k)
                  label(for='#{k}') #{k}人 
                  - k++
                - j++
          - i++

    //- input(type="hidden", name="pieces", value=pieces)
    button#bt-submit-2(class="btn btn-primary" type="submit") 次へ

  //- script(type="text/javascript" src="/app/entry.js")